<%= form_for(@dailybank) do |f| %>
  <% if @dailybank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dailybank.errors.count, "error") %> prohibited this dailybank from being saved:</h2>

      <ul>
      <% @dailybank.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table class= "table">
  <tr>
  <td colspan="2"><b>Date: </b><%= f.date_select :effective_date %>
 </td>
  <td>
    <b>Status: </b><%= f.text_field :status, :disabled => true, :value => "Draft" %> 
     <%= f.hidden_field :status, :value => "Draft" %>
   </td>
  <td>
  <b>User: </b><%= f.object.user_id %>
   <%= f.hidden_field :user_id, :value => current_user.id%><%= current_user.name %>
  </td>
  </tr>
  </table>
  
   <table class= "table">
   <tr>
   <td><%= f.label :till_cash %><br>
    <%= f.text_field :till_cash, :style => "text-align: Right" %>
    </td>
   <td> <%= f.label :till_float %><br>
    <%= f.text_field :till_float, :value =>200, :style => "text-align: Right" %>
    </td>
   <td> <%= f.label :card_payments %><br>
    <%= f.text_field :card_payments, :style => "text-align: Right" %>
    </td>
    <td> <%= f.label :expenses %><br>
     <%= f.text_field :expenses, :style => "text-align: Right" %>
     </td>
   </tr> 
   <tr>
   <td colspan="3"></td>
   <td><font color=#FFA500> <%= f.label :actual_cash_total %><br>
    <%= f.text_field :actual_cash_total, :disabled => true, :style => "text-align: Right" %></td>
    </tr>
    </table>
    <div class="field">
      <%= f.hidden_field :wet_takings %>
    </div>
    <div class="field">
       <%= f.hidden_field :dry_takings %>
    </div>
    <div class="field">
      <%= f.hidden_field :merch_takings %>
    </div>
     <table class= "table">
    <tr>
    <td><%= f.label :till_takings %><br>
    <%= f.text_field :till_takings, :style => "text-align: Right" %>
     </td>
    <td>  <%= f.label :vouchers_sold %><br>
    <%= f.text_field :vouchers_sold, :style => "text-align: Right" %>
    <br>
    <%= f.label :vouchers_used %><br>
        <%= f.text_field :vouchers_used, :style => "text-align: Right" %>
     </td>
    <td><%= f.label :deposit_sold %><br>
    <%= f.text_field :deposit_sold, :style => "text-align: Right" %>
    <br>
    <%= f.label :deposit_used %><br>
         <%= f.text_field :deposit_used, :style => "text-align: Right" %>
     </td>
    <td>
     </td>
     <tr>
    <td colspan="3"></td>
    <td><font color=#FFA500><%= f.label :actual_till_takings %><br>
     <%= f.text_field :actual_till_takings, :disabled => true, :style => "text-align: Right" %>
     </td> 
       </tr>
     </table>
  
   <table class= "table">
   <tr>
     <td colspan="1" style="width: 25%"></td>
     
     <td> <%= f.label :user_variance %><br>
      <%= f.text_field :user_variance, :style => "text-align: Right" %>
      </td>
     <td><font color=#FFA500> <%= f.label :calculated_variance %><br>
      <%= f.text_field :calculated_variance, :disabled => true, :style => "text-align: Right" %>
      </td>
      <td><b><font color=#FFA500>Variance Gap: </b><br>
       <%= f.text_field :variance_gap, :disabled => true %>
       </td> 
      </tr>
      <td colspan="2"><br></td>
      <td colspan="2"> <%= f.label :varaince_comment, "Variance Comment" %><br>
       <%= f.text_area :varaince_comment, cols: "55", rows: "2", :style => "text-align: Right"  %>
       </td>
  </table>

  <%= f.submit "Save Draft", class: "btn btn-primary"%>
    <% end %>
 
