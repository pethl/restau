<div class="col-md-8">

<h2>Staff</h2>
<%= link_to 'Add New Staff', new_staff_path, style: 'color:#d3d3d3' %>
<br>
<br>

<% @mgrs_grouped.each do |area, mgrs| %>

<h4>Managers</h4>
<table class="table table-condensed">
  <thead>
    <tr>
      <th style="width: 20%">Name</th>
      <th style="width: 20%">Status</th>
         <th style="width: 20%">Area</th>
      <th style="width: 30%">Job Title</th>
      <th style="width: 10%" colspan="2"><center>Action</th>
    </tr>
  </thead>

  <tbody>
 
    <% mgrs.each do |mgr| %>
      <tr>
        <td><%= link_to mgr.name, mgr %></td>
        <td><%= mgr.status %></td>
        <td><%= mgr.area %></td>
        <td><%= mgr.job_title %></td>
        <td><%= link_to edit_staff_path(mgr), class: 'btn btn-success btn-xs' do %>
                      <span class="fa fa-pencil-square-o""></span>  <% end %>
           </td>
            
        <td> 
             <%= link_to mgr, method: :delete, data: { confirm: 'Are you sure you want to delete this person?' }, class: 'btn btn-danger btn-xs' do %>
              <span class="fa fa-trash""></span>
               <% end %> </td>
                
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

