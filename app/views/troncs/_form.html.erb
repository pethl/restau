</div>
 <div class="col-md-4">
   <%= f.text_field :total, :disabled => true %>
   <%= f.date_select :end_date %>
       <hr>
    <%= f.text_field :mgr_split, label: "Managers %"  %>
        <hr>
    <%= f.text_field :kitchen_split, label: "Kitchen %"  %>
    <%= f.select(:kit_method, Tronc::TRONC_METHOD_TYPES, :label => "Kitchen Split Method?") %>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>

