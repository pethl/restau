<%= bootstrap_form_for(@tronc) do |f| %>
  <% if @tronc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tronc.errors.count, "error") %> prohibited this tronc from being saved:</h2>

      <ul>
      <% @tronc.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <div class="col-md-4">
    <%= f.select(:status, Tronc::TRONC_STATUS_TYPES, :label => "Status?") %>
