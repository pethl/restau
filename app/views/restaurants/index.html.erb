<%= render 'layouts/header' %>
<div style="padding-top:10px;"> 

<h2>Restaurants</h2><br>

<% @restaurants_by_account.each do |account, restaurants| %>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Website</th>
      <th>Primary contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Table Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tr colspan="3">
  <h4><%= Account.where(:id => account).first.company_name %></h4>
  </tr>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.primary_contact %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.phone %></td>
        <td class="text-center" ><%= table_count(restaurant.id) %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %> <% end %>
  </tbody>  
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %><br>
<%= link_to 'New Table', new_table_path %>
