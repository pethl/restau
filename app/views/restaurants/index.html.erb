<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Name</th>
      <th>Location</th>
      <th>Website</th>
      <th>Primary contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th># Tables</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= Account.where(:id => restaurant.account_id).first.company_name %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.website %></td>
        <td><%= restaurant.primary_contact %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.phone %></td>
        <td class="text-center" ><%= table_count(restaurant.id) %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

