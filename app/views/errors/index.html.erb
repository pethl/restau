<div class="row">
<div class="col-md-2">
<%= render 'layouts/sidebar' %>
</div>

<div class="col-md-10">
<h2>Error Messages</h2><br>


<table class="table">
  <thead>
    <tr>
      <th>Reference</th>
      <th>Error Message</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @errors.each do |error| %>
      <tr>
        <td><%= error.ref %></td>
        <td><%= error.msg %></td>
        <td><%= error.desc %></td>
        <td><%= link_to 'Show', error %></td>
        <td><%= link_to 'Edit', edit_error_path(error) %></td>
        <td><%= link_to 'Destroy', error, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Error', new_error_path %>
