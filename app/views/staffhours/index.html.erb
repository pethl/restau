<div class="row">
<div class="col-md-2">
<%= render 'layouts/sidebar' %>
</div>

<div class="col-md-8">
<h2>Staff Hours</h2><br>

<table class = "table">
  <thead>
    <tr>
      <th style="width: 15%">Week end date</th>
      <th style="width: 20%">Staff</th>
      <th style="width: 12%;text-align:right">Hours</th>
      <th style="width: 12%;text-align:right">Accruelrate</th>
      <th style="width: 12%;text-align:right">Week Accrued<br>Hours</th>
      <th style="width: 15%" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffhours.each do |staffhour| %>
    
      <tr>
        <td><%= staffhour.week_end_date.strftime('%a, %d %b') %></td>
        <td><%= staffhour.staff.name %></td>
        <td style="text-align:right"><%= number_with_precision(staffhour.hours, :precision => 2)  %> </td>
        <td style="text-align:right"><%= Accruel_rate.find(staffhour.accruel_rate_id).rate %></td>
        <td style="text-align:right"><%= number_with_precision(staffhour.wk_accrued_hours, :precision => 4)  %></td>
        
        <td><%= link_to 'Show', staffhour %></td>
        <td><%= link_to 'Edit', edit_staffhour_path(staffhour) %></td>
        <td><%= link_to 'Destroy', staffhour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Staffhour', new_staffhour_path, style: 'color:#d3d3d3' %>
</div></div>
