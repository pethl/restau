
  <%= bootstrap_form_for(@function, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f| %>
  
  <% if @function.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@function.errors.count, "error") %> prohibited this function from being saved:</h2>

      <ul>
      <% @function.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.text_field :customer_name %>
    <%= f.phone_field :phone %>
    <%= f.email_field :email %>
    <%= f.select(:when_is_event, Function::WHEN_TYPES, :label => "When is event?", :include_blank => true) %>
    <%= f.date_select :event_date %>
    <%= f.select :party_size, options_for_select(10..40, f.object.party_size ), :label => "Party size" %>
    <%= f.text_area :message, :label => "Notes" %>
    <%= f.time_select :event_start_time, :label => "Start time", :minute_step => 30, start_hour: 12, end_hour: 23, prompt: {hour: 'hour', minute: 'min'} %>
    <%= f.time_select :event_end_time,:minute_step => 30, start_hour: 12, end_hour: 23, prompt: {hour: 'hour', minute: 'min'} %>
    <%= f.number_field :deposit_amount, placeholder: "Â£" %>
    <%= f.text_field :deposit_paid, :label => "Deposit Code"%>
    <%= f.select(:t_and_c_signed, Function::TANDC_TYPES, :label => "Ts & Cs signed?") %>
    <%= f.select(:menu_choice, Function::MENU_TYPES, :label => "Menu confirmed?") %>

  <div class="col-sm-offset-2 col-sm-10">
   <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
   </div></div>
  
<% end %>
