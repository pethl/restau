<table class="table">
<tr><td>
    <%= form_for(@function) do |f| %>
    
  <% if @function.errors.any? %>
    <div class="error_messages">
      <h6>You have <%= pluralize(@function.errors.count, "error") %>:</h6>
      <ul>
      <% @function.errors.full_messages.each do |msg| %>
        <li><p><%= msg %></p></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
 <table class="table-condensed" style="border: 0; text-align:left; background-color: transparent">
 <tr><th colspan="3"><center><i>Please complete all fields. </i></th></tr>
 
 <tr><td style="width: 5%"></td><td style="width: 25%"></td><td style="width: 65%"></td><td style="width: 5%"></td></tr>
 <tr><td></td><td>Date</td><td><%= f.date_select :event_date, :style => "width: 220px;" %></td><td></td></tr>
 <tr><td></td><td>Time</td><td><%= f.select :est_time, options_for_select([["select time", ""], "Lunch", "Early evening", "Dinner"], f.object.est_time),:class=>"form-control input-lg"  %></td><td></td></tr>
 <tr><td></td><td>Party Size</td><td><%= f.select :est_party_size, options_for_select([["select size", ""], "15 - 20", "21 - 30", "31 - 40"], f.object.est_party_size,),:class=>"form-control input-lg"  %></td><td></td></tr>
 <tr><td></td><td>Name</td><td><%= f.text_field :customer_name, :style => "width: 220px;", :placeholder => " your name"  %></td><td></td></tr>
 <tr><td></td><td>Phone</td><td><%= f.text_field :phone, :style => "width: 220px;", :placeholder => " preferred contact number"  %></td><td></td></tr>
 <tr><td></td><td>Email</td><td> <%= f.text_field :email, :style => "width: 220px;", :placeholder => " please enter your correct email"  %></td><td></td></tr>
<tr><td></td><td>Message</td><td><%= f.text_field :message, :style => "width: 220px; height: 120px"  %></td><td></td></tr>
 <tr><td></td><td></td><td>
  <%= f.hidden_field :status, value: "Customer Enquiry" %>
     <div class="actions">
      <%= f.submit "Send Function Room Enquiry", class: "btn btn-success btn-sm" %>
     </div>
       <% end %>
  </td><td></td></tr>
  </table>
</td>
  </tr>
  </table>
 