<div class="row">
<div class="col-md-2">
<%= render 'layouts/sidebar' %>
</div>

<div class="col-md-10">

<h2>Accounts</h2><br>

<table class="table">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Primary contact</th>
      <th>Email</th>
      <th>Phone</th>
      <th># Restaurants</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
 
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.company_name %></td>
        <td><%= account.primary_contact %></td>
        <td><%= account.email %></td>
        <td><%= account.phone %></td>
        <td class="text-center" ><%= restaurant_count(account.id) %></td>
        <td><%= link_to edit_account_path(account), class: 'btn btn-success btn-xs' do %>
             <span class="fa fa-pencil-square-o""></span>
             <% end %> 
             |
            <%= link_to account, method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }, class: 'btn btn-warning btn-xs' do %>
              <span class="fa fa-trash""></span>
             <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path %><br>
<%= link_to 'New Restaurant', new_restaurant_path %>
</div></div>
