
<div class="row">
<div class="col-md-2">
<%= render 'layouts/sidebar' %>
</div>

<div class="col-md-10">
<h3>All Expenses</h3>

<table class= "table table-condensed">
  <thead>
    <tr>
      <th>Ref</th>
      <th>Date</th>
      <th>What</th>
      <th>Where</th>
      <th>Price</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.ref %></td>
        <td><%= Dailybank.where(:id => expense.dailybank_id).first.effective_date %></td>
        <td><%= expense.what %></td>
        <td><%= expense.where %></td>
        <td><%= number_to_currency(expense.price, :locale => :en) %></td>
        
        <td><%= link_to 'See End of Night', dailybank_path(Dailybank.where(:id => expense.dailybank_id).first.id) %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>
