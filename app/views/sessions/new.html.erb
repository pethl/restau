<h3><%= link_to "Hang Fire Southern Kitchen", static_pages_hfsk_home_url %></h3>
<h1>Log in</h1>

<div class="row">
  <div class="span6 offset3">
  
      <%= bootstrap_form_for(:session, url: login_path, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-5") do |f| %>
      
      <%= f.text_field :email %>
      <%= f.password_field :password %>
<br>
<div class="col-sm-offset-3 col-sm-10">

      <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
  </div>
</div>
